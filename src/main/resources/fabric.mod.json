{
    "schemaVersion": 1,
    "id": "showdurability",
    "version": "${version}",

    "name": "Show Durability",
    "description": "Show the durability of items in inventories and in the hotbar directly on the items with a number.",
    "authors": [
        "Thomilist"
    ],
    "contact": {
        "homepage": "https://modrinth.com/mod/show-durability",
        "sources": "https://github.com/thomilist/show-durability/",
        "issues": "https://github.com/Thomilist/show-durability/issues"
    },
    "license": "MIT",
    "icon": "assets/showdurability/icon.png",

    "environment": "client",
    "entrypoints": {
        "client": [
            "net.thomilist.showdurability.ShowDurabilityMod"
        ]
    },
    "mixins": [
        "showdurability.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.15.1",
        "fabric-api-base": "*",
        "minecraft": "1.20.4",
        "java": ">=17",
        "fabric-key-binding-api-v1": "*"
    }
}